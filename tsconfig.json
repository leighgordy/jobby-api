{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true
  },
  "exclude": [
    "lib",
    "node_modules",
    "test/**/*.ts"
  ],
  "include": [
    "src"
  ]
}
